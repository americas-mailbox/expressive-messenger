{
    "name": "xtreamlabs/expressive-messenger",
    "description": "Symfony Messenger for Zend Expressive",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "psr/container": "^1.0",
        "symfony/messenger": "4.0.x-dev || ^4.1",
        "symfony/property-access": "^4.0",
        "symfony/serializer": "^4.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^4.0",
        "enqueue/enqueue": "^0.8.24",
        "enqueue/redis": "^0.8.23",
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^7.0",
        "zendframework/zend-servicemanager": "^3.3"
    },
    "suggest": {
        "enqueue/enqueue": "For using the php-enqueue library as a queue."
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "zf": {
            "config-provider": "XtreamLabs\\Expressive\\Messenger\\ConfigProvider"
        }
    },
    "autoload": {
        "psr-4": {
            "XtreamLabs\\Expressive\\Messenger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XtreamLabsTest\\Expressive\\Messenger\\": "test/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse --level=0 src",
        "analyse-strict": "phpstan analyse -l 7 src",
        "check": [
            "@cs-check",
            "@test",
            "@analyse"
        ],
        "cs-check": "phpcs --colors",
        "cs-fix": "phpcbf --colors",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "support": {
        "issues": "https://github.com/xtreamlabs/expressive-session/issues",
        "source": "https://github.com/xtreamlabs/expressive-session",
        "rss": "https://github.com/xtreamlabs/expressive-session/releases.atom"
    }
}
